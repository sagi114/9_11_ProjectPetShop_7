@model IEnumerable<_9_11_ProjectPetShop_1.Models.Animals>
@{
    ViewData["Title"] = "Home Page";
}

<h4>Home Page:</h4>
<div class="FormClass" style="padding:0px;">The two most hihly raded pets today are:</div>
<div class="continer">
        <table class="table table-dark">
            <thead >
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">@Html.DisplayNameFor(A => A.FirstOrDefault().Name)</th>
                    <th scope="col">@Html.DisplayNameFor(A => A.FirstOrDefault().Image.ImageTitle)</th>
                    <th scope="col">@Html.DisplayNameFor(A => A.FirstOrDefault().Description)</th>
                    <th scope="col">Comments Amount:</th>
                </tr>
            </thead>
            @foreach (var Animale in Model)
            {
        <tr>
            <th scope="row">@(ViewBag.caunter++)</th>
            <td>@Animale.Name</td>
            <td><img alt="@Animale.Image.ImageData" src="data:image/jpg;base64,@Convert.ToBase64String(Animale.Image.ImageData)"/></td>
            <td>@Animale.Description</td>
            <td>@Animale.Comments.Count()</td>
        </tr>
            }
        </table>
</div>

