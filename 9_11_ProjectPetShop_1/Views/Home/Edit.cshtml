@model _9_11_ProjectPetShop_1.Models.Animals
@{
    ViewData["Title"] = "Edit";
}

<h4>Edit</h4>
<div class="FormClass">
    @using (Html.BeginForm("SendToEdit", "Home"))
    {
        @if (ViewBag.isValid == false)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>You didnt input the information please try again!!!!!</strong><br /> @Html.ValidationSummary()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div>
            @Html.LabelFor(A => A.Name)
        </div>
        <div>
            @Html.EditorFor(A => A.Name)
        </div>
        <div>
            @Html.LabelFor(A => A.Age)
        </div>
        <div>
            @Html.EditorFor(A => A.Age)
        </div>
        <div>
            @Html.LabelFor(A => A.Description)
        </div>
        <div>
            @Html.EditorFor(A => A.Description)
        </div>
        <div>
            <input type="hidden" asp-for="@Model.Id" />
            <input type="hidden" asp-for="@Model.CategoryId" />
        </div>
        <input type="submit" value="Submit my details" />
    }
</div>